<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.tecnologiasintech.e_planner">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
        </activity>
        <activity android:name=".activity.SignupActivity">
        </activity>
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ResetPasswordActivity">
        </activity>
        <activity android:name=".activity.ChangePasswordActivity">
        </activity>
        <activity
            android:name=".activity.EventActivity"
            android:label="@string/title_activity_event"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tecnologiasintech.e_planner.activity.MainActivity"/>
        </activity>
        <activity
            android:name=".activity.MentorActivity"
            android:label="@string/title_activity_mentor"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tecnologiasintech.e_planner.activity.MainActivity"/>
        </activity>
        <activity
            android:name=".activity.StudentActivity"
            android:label="@string/title_activity_student"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tecnologiasintech.e_planner.activity.MainActivity"/>
        </activity>
        <activity android:name=".activity.CreateStudentActivity"
            android:parentActivityName=".activity.StudentActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tecnologiasintech.e_planner.activity.StudentActivity"/>
        </activity>
    </application>

</manifest>